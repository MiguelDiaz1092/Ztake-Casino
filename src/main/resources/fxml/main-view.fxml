<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" styleClass="background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ztake.casino.controller.MainController">

    <!-- Barra lateral de navegación -->
    <left>
        <VBox prefWidth="200.0" styleClass="sidebar" spacing="10.0">
            <padding>
                <Insets top="20.0" right="10.0" bottom="20.0" left="10.0" />
            </padding>
            <children>
                <!-- Logo -->
                <VBox alignment="CENTER" spacing="10.0">
                    <ImageView fitWidth="150.0" preserveRatio="true">
                        <Image url="@../images/ztake-logo.png" />
                    </ImageView>
                </VBox>

                <!-- Información de usuario -->
                <VBox styleClass="user-info-box" spacing="5.0">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                    </padding>
                    <Label text="Bienvenido," styleClass="text-label" />
                    <Label fx:id="usernameLabel" text="Usuario" styleClass="title-label" />
                    <Separator />
                    <HBox alignment="CENTER_LEFT" spacing="5.0">
                        <Label text="Saldo:" styleClass="text-label" />
                        <Label fx:id="balanceLabel" text="1000.00" styleClass="balance-label" />
                    </HBox>
                    <!-- Reloj en tiempo real -->
                    <Separator />
                    <Label fx:id="clockLabel" text="00/00/0000 00:00:00" styleClass="text-label" />
                </VBox>

                <!-- Separador -->
                <Separator />

                <!-- Opciones de navegación -->
                <Button fx:id="homeButton" text="Inicio" styleClass="nav-button" maxWidth="Infinity" onAction="#handleHomeButtonAction" />
                <Button fx:id="gamesButton" text="Juegos" styleClass="nav-button" maxWidth="Infinity" onAction="#handleGamesButtonAction" />
                <Button fx:id="historyButton" text="Historial" styleClass="nav-button" maxWidth="Infinity" onAction="#handleHistoryButtonAction" />
                <Button fx:id="profileButton" text="Perfil" styleClass="nav-button" maxWidth="Infinity" onAction="#handleProfileButtonAction" />
                <Button fx:id="supportButton" text="Soporte" styleClass="nav-button" maxWidth="Infinity" onAction="#handleSupportButtonAction" />

                <Region VBox.vgrow="ALWAYS" />

                <!-- Botón de cerrar sesión en la parte inferior -->
                <Button fx:id="logoutButton" text="Cerrar Sesión" styleClass="logout-button" maxWidth="Infinity" onAction="#handleLogoutButtonAction" />
            </children>
        </VBox>
    </left>

    <!-- Contenido principal que cambia según la sección -->
    <center>
        <StackPane fx:id="contentArea">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
            </padding>

            <!-- Vista de inicio predeterminada -->
            <VBox fx:id="homeView" spacing="20.0">
                <Label text="Juegos Destacados" styleClass="section-title" />

                <!-- Cuadrícula de juegos -->
                <GridPane hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="150.0" prefHeight="200.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <!-- Tarjeta del juego Mines -->
                    <VBox styleClass="game-card" GridPane.columnIndex="0" GridPane.rowIndex="0" onMouseClicked="#handleMinesGameAction">
                        <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                            <ImageView fitWidth="100.0" fitHeight="100.0" preserveRatio="true">
                                <Image url="@../images/mines-icon.png" />
                            </ImageView>
                        </VBox>
                        <Label text="Mines" styleClass="game-title" alignment="CENTER" maxWidth="Infinity" />
                    </VBox>

                    <!-- Más juegos se añadirán aquí -->
                </GridPane>

                <!-- Sección de actividad reciente -->
                <VBox spacing="10.0">
                    <Label text="Actividad Reciente" styleClass="section-title" />
                    <TableView fx:id="recentActivityTable" prefHeight="200.0">
                        <columns>
                            <TableColumn fx:id="gameColumn" text="Juego" prefWidth="150.0" />
                            <TableColumn fx:id="betColumn" text="Apuesta" prefWidth="100.0" />
                            <TableColumn fx:id="resultColumn" text="Resultado" prefWidth="100.0" />
                            <TableColumn fx:id="dateColumn" text="Fecha" prefWidth="150.0" />
                        </columns>
                    </TableView>
                </VBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>